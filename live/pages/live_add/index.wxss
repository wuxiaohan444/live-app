@import "../../../Wxss/0.wxss";

.livePlayer-wrap {
    background: #000;
    overflow: hidden;
}

.live-room-player {
    width: 100%;
    position: relative;
    z-index: 1;
}

.livePlayer-ctn-box {
    position: absolute;
    z-index: 10;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
}

.livePlayer-navBar-box {
    width: 100%;
    position: relative;
    z-index: 11;
}

.livePlayer-navBar {
    width: 100%;
    height: 100rpx;
    overflow: hidden;
    position: absolute;
    z-index: 12;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.livePlayer-back {
    height: 30px;
    width: 30px;
    margin-right: 10px;
    margin-left: 15px;
}

.player-info {
    display: flex;
    color: #111;
    height: 32px;
    padding: 0 3px;
    border-radius: 22px;
    align-items: center;
    box-sizing: border-box;
    background-color: hsla(0,0%,100%,0.6);
}

.player-info .logo {
    width: 26px;
    height: 26px;
    margin-right: 6px;
    border-radius: 50%;
}

.player-info .name {
    font-size: 12px;
    max-width: 80px;
    line-height: 14px;
    margin-right: 8px;
    text-overflow: ellipsis;
}

.player-info .name .business-name {
    max-width: 80px;
    height: 15px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.player-info .online {
    white-space: nowrap;
    font-size: 10px;
    line-height: 12px;
    margin-top: 1px;
}

.player-info .subscribe {
    color: #111;
    width: 38px;
    height: 26px;
    font-size: 12px;
    line-height: 26px;
    border-radius: 13px;
    text-align: center;
    box-sizing: border-box;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.icons {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 48rpx;
    height: 110rpx;
    padding: 0 24rpx;
    display: flex;
    align-items: flex-end;
}

.goods-bag {
    position: relative;
    width: 72rpx;
    height: 82rpx;
}

.icon-goods {
    width: 72rpx;
    height: 82rpx;
}

.goods-count {
    left: 0;
    bottom: 8rpx;
    width: 100%;
    font-size: 12px;
    font-weight: 500;
    line-height: 14px;
    color: #fff;
    position: absolute;
    text-align: center;
}

.comment {
    flex: 1;
    color: #fff;
    font-size: 14px;
    line-height: 40px;
    margin-left: 30rpx;
    position: relative;
    text-align: left;
    background: transparent;
}

.comment-border {
    position: absolute;
    left: 0;
    bottom: 2px;
    height: 1px;
    width: 90%;
    transform: scaleY(50%);
    background-color: hsla(0,0%,100%,0.4);
}

.icon {
    width: 80rpx;
    height: 80rpx;
    margin-left: 20rpx;
}

.like-count {
    width: 64rpx;
    height: 24rpx;
    right: 30rpx;
    bottom: 68rpx;
    font-size: 9px;
    border-radius: 100px;
    line-height: 24rpx;
    background-color: #f44;
    color: #fff;
    position: absolute;
    text-align: center;
}

.root {
    display: flex;
    height: 100rpx;
    align-items: center;
    background-color: #fff;
}

.van-field__body {
    display: flex;
    align-items: center;
}

.van-field__input {
    position: relative;
    display: block;
    width: 100%;
    height: 24px;
    min-height: 24px;
    padding: 0;
    margin: 0;
    line-height: inherit;
    color: #333;
    text-align: left;
    background-color: initial;
    border: 0;
    box-sizing: border-box;
    resize: none;
    padding-left: 10px;
}

.van-hairline-left {
    font-size: 14px;
    line-height: 100rpx;
    color: #f44;
    padding: 0 20px;
    background-color: #fff;
    position: relative;
}

.van-hairline-left::after {
    content: " ";
    position: absolute;
    pointer-events: none;
    box-sizing: border-box;
    transform-origin: center;
    top: -50%;
    left: -50%;
    right: -50%;
    bottom: -50%;
    transform: scale(0.5);
    border: 0 solid #eee;
    border-left-width: 1px;
}

.field {
    flex: 1;
}

.chat-box {
    width: 230px;
    position: absolute;
    left: 24rpx;
    right: 24rpx;
    padding-top: 28px;
    overflow: hidden;
    z-index: 12;
    bottom: 160rpx;
}

.chat-ctn {
    position: relative;
    padding-top: 26px;
}

.chat-getinto {
    position: absolute;
    display: flex;
    top: 0;
    left: 0;
    color: #323233;
    font-size: 14px;
    transition: 0.35s;
    line-height: 20px;
    padding: 3px 10px;
    border-radius: 20px;
    transform: translateX(-120%);
    background-color: hsla(0,0%,100%,0.75);
}

.chat-getinto-name {
    max-width: 160px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.notice--show {
    transform: translateX(0);
}

.chat-scroll {
    max-height: 200px;
    overflow: hidden;
    width: 100%;
}

.bulletin {
    padding: 6px;
    display: block;
    margin-top: 4px;
    font-size: 14px;
    font-weight: 500;
    width: 230px;
    background: rgba(0,0,0,0.3);
    border-radius: 10px;
    line-height: 20px;
    color: #ffd78c;
    white-space: normal;
}

.bulletin text {
    color: #fff;
}

.live-player-add {
    position: absolute;
    left: 30rpx;
    right: 30rpx;
    background-color: rgba(0,0,0,0.3);
    border-radius: 10rpx;
    padding: 26rpx;
}

.live-player-add-title {
    line-height: 50rpx;
    font-size: 36rpx;
    color: #fff;
    border-bottom: 2rpx solid rgba(255,255,255,0.5);
    padding-bottom: 20rpx;
}

.live-player-add-info {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-top: 20rpx;
}

.live-player-add-info-left {
    width: 220rpx;
    height: 220rpx;
    border-radius: 12rpx;
    overflow: hidden;
    background-color: #fff;
    position: relative;
}

.live-player-add-info-left image {
    width: 100%;
    height: 100%;
}

.live-player-add-info-left-font {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    background-color: rgba(0,0,0,0.4);
    color: #fff;
    text-align: center;
}

.live-player-add-info-right {
    width: 400rpx;
    height: 200rpx;
    margin-left: 20rpx;
    flex: 1;
    font-size: 28rpx;
    color: #fff;
    line-height: 40rpx;
    white-space: pre-wrap;
}

.live-player-add-info-right input {
    background: none;
    border: none;
    font-size: 36rpx;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
}

.live-player-add-btn {
    position: absolute;
    bottom: 0;
    color: #fff;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fe4564;
    width: 100%;
    left: 0;
    text-align: center;
    font-size: 36rpx;
}

.live-player-add-btn-hover {
    background-color: #f00;
}

.text-placeholder {
    color: #ccc;
}

.popPay-bg {
    position: absolute;
