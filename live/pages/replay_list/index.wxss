page {
    background: #f4f4f4;
}

.order-item {
    height: 240rpx;
    width: 100%;
    display: flex;
    position: relative;
    transition: all 0.2s ease-out;
}

.order-item>.content {
    padding: 0 30rpx;
    height: 240rpx;
    background: #fff;
    display: flex;
    align-items: center;
    border-bottom: solid 1rpx #f1f1f1;
    flex: 1;
}

.order-item:last-child .content {
    border-bottom: none;
}

.content>.img {
    width: 180rpx;
    height: 180rpx;
    display: block;
    border-radius: 12rpx;
}

.content>.text {
    flex: 1;
    padding-left: 30rpx;
}

.content>.text>.title {
    font-size: 28rpx;
    color: #333;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    font-weight: 500;
}

.content>.text>.num {
    font-size: 24rpx;
    color: #666;
    margin-top: 60rpx;
}

.delete_btn {
    width: 184rpx;
    background-color: #8FC31F;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}

.remove {
    width: 160rpx;
    height: 100%;
    background-color: #fe4564;
    color: white;
    position: absolute;
    top: 0;
    right: -160rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
}