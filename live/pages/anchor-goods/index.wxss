@import "../../../Wxss/0.wxss";

.popPay-bg {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.3);
    z-index: 19;
}

.popPay-list-li-commission {
    font-size: 28rpx;
}

.popPay-list-li-marketprice {
    display: flex;
}

.popPay-list-li-moreinfo {
    display: flex;
    justify-content: space-between;
}

.popPay-list-li-goods-commission {
    color: red;
    font-size: 28rpx;
}

.popPay-commodity-lists {
    width: 100%;
    height: 100%;
    transform: translateY(-120%);
    z-index: 20;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}

.popPay-commodity {
    position: fixed;
    bottom: 0;
    background-color: #eee;
    width: 100%;
    left: 0;
    transform: translateY(-120%);
    z-index: 20;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}

.popPay--show {
    transform: translateY(0);
}

.popPay-list {
    height: 300px;
}

.popPay-list-ul {
    padding: 0 10px;
    background-color: #fff;
}

.mr120 {
    margin-bottom: 120rpx;
}

.popPay-list-li {
    border-bottom: 2rpx solid #ddd;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 0;
}

.popPay-list-li:last-child {
    border-bottom: 0;
}

.popPay-list-li-left {
    width: 200rpx;
    height: 200rpx;
    overflow: hidden;
    border-radius: 10rpx;
    position: relative;
}

.popPay-list-li-left image {
    width: 100%;
    height: 100%;
}

.popPay-list-li-right {
    width: 480rpx;
    height: 190rpx;
}

.popPay-list-li-title {
    font-size: 14px;
    line-height: 20px;
    height: 20px;
    width: 100%;
    overflow: hidden;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.popPay-list-li-num {
    margin-top: 30rpx;
    color: #999;
    font-size: 28rpx;
}

.popPay-list-li-date {
    color: #999;
    font-size: 24rpx;
}

.popPay-list-li-money {
    color: #f44;
    font-size: 14px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    line-height: 20px;
    margin-top: 10rpx;
}

.popPay-list-li-money-right {
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    display: flex;
    align-items: center;
}

.popPay-list-li-money-right i {
    font-size: 40rpx;
}

.popPay-list-li-money-right button {
    text-align: center;
    border-radius: 10rpx;
    line-height: 50rpx;
    color: #999;
    border: 1px solid #999;
    padding: 0 10rpx;
    margin: 0 5rpx;
    font-size: 24rpx;
}

.popPay-list-li-money-right button::after {
    border: 0;
}

.sec-button-red {
    color: #f00!important;
    border-color: #f00!important;
}

.sec-button-disabled {
    color: #ddd!important;
    border-color: #ddd!important;
}

.commodity-hot-box {
    position: absolute;
    z-index: 12;
    left: 10px;
    width: 140rpx;
}

.commodity-hot-li {
    background-color: #fff;
    padding: 10rpx;
    border-radius: 10rpx;
    margin-bottom: 10rpx;
}

.commodity-hot-li-img {
    width: 120rpx;
    height: 120rpx;
}

.commodity-hot-li-img image {
    width: 100%;
    height: 100%;
}

.commodity-hot-li-font {
    font-size: 12px;
    line-height: 16px;
    text-align: center;
}

.prohibitUser {
    height: 200rpx;
    margin-top: -50rpx;
    text-align: center;
}

.prohibitUser image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}

.prohibitUser .prohibitUser-name {
    text-align: center;
    font-size: 36rpx;
    line-height: 40rpx;
}

.prohibitUser-list {
    text-align: center;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #f00;
    border-bottom: 2rpx solid #eaeaea;
    border-top: 2rpx solid #eaeaea;
}

.popPay-title {
    text-align: center;
    font-size: 28rpx;
    position: relative;
    line-height: 80rpx;
}

.popPay-close {
    position: absolute;
    right: 20rpx;
    top: 10rpx;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: right;
}

.popPay-add {
    position: absolute;
    left: 20rpx;
    top: 36rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
}

.goods-add-search-box {
    padding: 20rpx;
}

.goods-add-search {
    background-color: #e6e6e6;
    border-radius: 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    align-items: center;
    padding: 0 10rpx;
}

.goods-add-search-icon {
    width: 80rpx;
    text-align: center;
    font-size: 50rpx;
}

.goods-add-search-input {
    flex: 1;
    height: 80rpx;
    align-items: center;
}

.goods-add-search-input input {
    width: 100%;
    line-height: 80rpx;
    font-size: 28rpx;
    height: 80rpx;
    background: none;
    border: none;
    padding: 0;
    margin: 0;
}

.poptool-list-box {
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    align-items: center;
    padding: 20rpx 0;
}

.poptool-list-li {
    width: 25%;
    height: 160rpx;
    text-align: center;
    margin-bottom: 20rpx;
}

.poptool-list-li-icon {
    border-radius: 50%;
    width: 100rpx;
    height: 100rpx;
    background-color: #fff;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    display: inline-block;
}

.poptool-list-li-icon i {
    font-size: 60rpx;
}

.poptool-list-li-icon-bg-01 {
    background-color: #e058d8;
}

.poptool-list-li-icon-bg-02 {
    background-color: #deb444;
}

.poptool-list-li-icon-bg-03 {
    background-color: #449fde;
}

.poptool-list-li-font {
    font-size: 26rpx;
    text-align: center;
    line-height: 60rpx;
}

.forbidden-li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 2rpx solid #eaeaea;
}

.forbidden-li-left {
    width: 120rpx;
    height: 120rpx;
}

.forbidden-li-left image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.forbidden-li-ctn {
    flex: 1;
    align-items: center;
    margin: 0 20rpx;
}

.forbidden-li-ctn-name {
    font-size: 28rpx;
    color: #999;
    font-weight: 700;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.forbidden-li-ctn-date {
    font-size: 22rpx;
    color: #aaa;
}

.forbidden-li-right {
    border-radius: 30rpx;
    line-height: 60rpx;
    border: 2rpx solid #f00;
    color: #f00;
    font-size: 28rpx;
    padding: 0 20rpx;
}

.empty-content {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
}

.contact {
    font-size: 16px;
    width: 100%;
    background-color: #eee;
    padding: 8rpx 0;
    border-radius: 0;
    margin: 0;
    line-height: 2;
}

.fui-button {
    font-size: 30rpx;
    background: #fe4564;
    position: fixed;
    bottom: 0;
    display: flex;
    width: 100%;
    justify-content: center;
    height: 100rpx;
    align-items: center;
    color: #fff;
}

.fui-button view {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.iconfontJiajia {
    font-size: 12px;
}

.no-liveGoods {
    font-size: 24rpx;
    color: #666;
    text-align: center;
    margin-top: 40%;
}

.start-live{
    width: 200rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    background: #fe4564;
    position: fixed;
    right: 20rpx;
    top:170rpx;
    color: #ffffff;
}