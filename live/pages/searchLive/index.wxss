@import "../../../Wxss/0.wxss";

.page {
    display: block;
    padding-bottom: 58px;
    box-sizing: border-box;
}

.page--iPhone-X {
    padding-bottom: 92px;
}

.search {
    padding: 30rpx;
    background: #fe4564;
    position: sticky;
    width: 100%;
    left: 0;
    top: 0;
    z-index: 99;
}

.search-box {
    background-color: #f8f8f8;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    height: 70rpx;
    border-radius: 30rpx;
    color: #999999;
}

.search-box>.iconfontJiajia {
    font-size: 50rpx;
    padding: 0 4rpx 0 10rpx;
}

.search-box>input {
    width: 85%;
    font-size: 26rpx;
    color: #333;
}

.lives-empty {
    text-align: center;
    margin-top: 100rpx;
    color: #7d7e80;
    margin: 0 auto;
}

.lives-loadend {
    color: #7d7e80;
    text-align: center;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    display: block;
    width: 100%;
}

.empty {
    margin: auto;
}

.empty-image {
    width: 400rpx;
    height: 400rpx;
    display: block;
    margin: 260rpx auto 60rpx;
}

.empty-message {
    color: #000;
    text-align: center;
    font-size: 15px;
    line-height: 20px;
}

.goods-list {
    display: flex;
    flex-wrap: wrap;
    width: 700rpx;
    margin: auto;
    justify-content: space-between;
}

.preview {
    position: relative;
    color: #fff;
    font-size: 13px;
    overflow: hidden;
    width: 48.5%;
    height: 310px;
    border-radius: 6px;
    margin-top: 12px;
}

.endLine {
    width: 100%;
    padding: 13px;
    text-align: center;
    color: #999;
    font-size: 14px;
}

.single-live {
    margin-top: 12px;
}

.index-bg {
    width: 100%;
    height: 400rpx;
    position: relative;
    padding-top: 12px;
}

.index-bg swiper {
    width: 100%;
    height: 100%;
    text-align: center;
    margin: 0 auto;
}

.index-bg swiper swiper-item {
    text-align: center;
}

.index-bg .slide-navigator {
    width: 100%;
    height: 100%;
    margin: 0 auto;
}

.index-bg .slide-navigator .slide-image {
    width: 100%;
    height: 100%;
    border-radius: 5px;
    z-index: 999;
}

.index-bg .wx-swiper-dot {
    width: 20rpx;
    height: 5rpx;
}

.index-bg .wx-swiper-dots.wx-swiper-dots-horizontal {
    margin-bottom: 5rpx;
}

.notification {
    height: 15px;
    width: 15px;
    vertical-align: middle;
    margin: 0px 0px 6px 5px;
    border-left: 1px solid #efefef;
    padding-left: 10rpx;
    color: #fd5454;
}

.entry-list {
    position: relative;
    box-sizing: border-box;
    padding: 24rpx 0 20rpx 0;
    overflow: hidden;
}

.entry-list .special {
    display: flex;
    height: 290rpx;
    flex-direction: column;
    flex-wrap: wrap;
    justify-content: space-between;
}

.entry-list .list .item {
    position: relative;
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
    color: #666;
    font-size: 22rpx;
    overflow: hidden;
    text-align: center;
}

.entry-list .list image {
    width: 90rpx;
    height: 90rpx;
}

.entry-list .list .label {
    margin-top: 12rpx;
    font-size: 22rpx;
    color: #1b1b1b;
    width: 140rpx;
    overflow: hidden;
}