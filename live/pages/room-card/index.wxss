page {
    background: #f4f4f4;
}

.content {
}

.content>.list {
    display: flex;
    align-items: center;
    background: #fff;
    border-bottom: solid 1rpx #f1f1f1;
    padding: 20rpx 30rpx;
}

.content>.mt20 {
    margin-top: 20rpx;
}

.content>.list>.name {
    margin-left: auto;
    color: #666;
    font-size: 28rpx;
}

.content>.list>.right {
    width: 12rpx;
    height: 20rpx;
    margin-left: 8rpx;
}

.content>.list>.auto {
    margin-left: auto;
}

.content>.list>.title {
    flex: 0 0 200rpx;
    font-size: 28rpx;
}

.content>.list>.title>.num {
    font-size: 20rpx;
    color: #666;
    margin-left: 20rpx;
}

.content>.list>.input {
    flex: 1;
    text-align: right;
    line-height: 80rpx;
    font-size: 28rpx;
    padding-left: 30rpx;
}

.neirong {
    background: #fff;
    margin-top: 20rpx;
}

.neirong>.title {
    display: flex;
    align-items: center;
    height: 90rpx;
    padding: 0 30rpx;
    font-size: 28rpx;
}

.neirong>.title>.item-box {
    margin-left: auto;
    display: flex;
    align-items: center;
}

.neirong>.title>.item-box>.item {
    background: #f3f3f3;
    color: #666;
    padding: 10rpx 20rpx;
    border-radius: 6rpx;
    font-size: 24rpx;
    margin-left: 30rpx;
    position: relative;
}

.neirong>.title>.item-box>.item>.delete {
    position: absolute;
    top: -10rpx;
    right: -10rpx;
    background-color: #fe4564;
    color: #fff;
    width: 34rpx;
    height: 34rpx;
    border-radius: 100%;
    font-size: 28rpx;
    text-align: center;
    line-height: 34rpx;
}

.neirong>.title>.item-box>.itemActive {
    background: #fe4564;
    color: #fff;
}

.tipbox {
    width: 200rpx;
    margin: 50rpx auto;
    padding: 30rpx;
    background: rgba(51,51,51,0.4);
    border-radius: 6rpx;
    text-align: center;
}

.tipbox>.title {
    color: #fe4564;
    font-size: 28rpx;
    font-weight: 700;
}

.tipbox>.text {
    font-size: 24rpx;
    color: #fff;
}

.btn {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    align-items: center;
}

.btn>.item {
    font-size: 26rpx;
    text-align: center;
    line-height: 90rpx;
    flex: 1;
}

.btn>.add {
    background: #fff;
}

.btn>.bao {
    background: #fe4564;
    color: #fff;
}