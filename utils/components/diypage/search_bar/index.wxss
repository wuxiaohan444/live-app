@import "../../../../Wxss/0.wxss";

#newindex_search_bar {
}

#newindex_search_bar .search-box {
    text-align: center;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

#newindex_search_bar .search-box.on {
    background-color: #ff4466;
}

#newindex_search_bar .search-box.black {
    background-color: #232323;
}

#newindex_search_bar .search-box.gray {
    background-color: #666;
}

#newindex_search_bar .search-box.red {
    background-color: #ff4466;
}

#newindex_search_bar .search-box.red .search-lable-box-li {
    color: #ffc7bc!important;
}

#newindex_search_bar .navbar-search {
    width: 100%;
}

#newindex_search_bar .navbar-search .logo {
    width: 70rpx;
    color: #fff;
    text-align: center;
    margin: 0 20rpx;
    font-size: 22rpx;
}

#newindex_search_bar .navbar-search .logo i {
    font-size: 18px;
    color: #fff;
}

#newindex_search_bar .navbar-search .logo image {
    width: 100%;
    height: 100%;
    display: block;
}

#newindex_search_bar .navbar-search .search {
    width: 100%;
    height: 64rpx;
    background-color: #f7f7f7;
    border-radius: 50rpx;
    margin: 0 30rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    color: #bbb;
    display: flex;
    align-items: center;
    padding: 0 28rpx;
}

#newindex_search_bar .navbar-search .search .input {
    flex: 1;
    text-align: left;
}

#newindex_search_bar .navbar-search .search .icon-xiazai5 {
    font-size: 34rpx;
    margin-right: 16rpx;
}

#newindex_search_bar .search-lable-box {
    display: flex;
    align-items: center;
    padding: 14rpx 0;
}

#newindex_search_bar .search-lable-box-li {
    flex: 1;
    text-align: center;
    height: 40rpx;
    line-height: 40rpx;
    color: #f5e3d9;
    font-size: 22rpx;
}

#newindex_search_bar .search-lable-box-li::after {
    content: '';
    position: absolute;
    right: 0;
    width: 4rpx;
    overflow: hidden;
    height: 20rpx;
    top: 50%;
    margin-top: -10rpx;
    background-color: #f5e3d9;
    z-index: 20;
    opacity: 0.5;
}

#newindex_search_bar .search-lable-box-li:nth-last-child(1)::after {
    background: none;
}

#newindex_search_bar .search-lable-box-li i {
    color: #fff;
    font-size: 24rpx;
    margin-right: 4rpx;
    opacity: 0.8;
}