@import "../../../../Wxss/0.wxss";

.viewXscroll {
    margin-bottom: 30rpx;
}

.title {
    padding: 30rpx;
}

.title>.text {
    font-size: 36rpx;
    font-weight: 700;
}

.title>.tip {
    font-size: 24rpx;
    color: #999999;
}

.scroll-view {
    white-space: nowrap;
    display: flex;
}

.scroll-view .item {
    display: inline-block;
    margin-left: 30rpx;
}

.scroll-view .item:last-child {
    margin-right: 30rpx;
}

.scroll-view .item .img {
    width: 260rpx;
    height: 260rpx;
    border-radius: 12rpx;
}

.scroll-view .item .name {
    font-size: 28rpx;
    color: #333;
    font-weight: 700;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal!important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    width: 260rpx;
    line-height: 1.2;
    margin: 20rpx 0 8rpx 0;
    height: 70rpx;
}

.scroll-view .item .money {
    font-size: 28rpx;
    color: #e53530;
    font-weight: 700;
}

.scroll-view .item .money>text {
    font-size: 24rpx;
    color: #999;
    margin-left: 10rpx;
}

.big-img {
    padding: 0 30rpx;
}

.big-img>image {
    margin-bottom: 30rpx;
    width: 100%;
    height: 380rpx;
}