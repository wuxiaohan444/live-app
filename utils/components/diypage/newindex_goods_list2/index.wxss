@import "../../../../Wxss/0.wxss";

.suoyuan-live>.title {
    display: flex;
    align-items: center;
    height: 100rpx;
    padding: 0 30rpx;
}

.suoyuan-live>.title>.name {
    font-size: 36rpx;
    color: #333;
    font-weight: 700;
}

.suoyuan-live>.title>.name>text {
    font-size: 20rpx;
    color: #999;
    font-weight: 500;
}

.suoyuan-live>.title>.text {
    font-size: 28rpx;
    font-weight: 700;
}

.suoyuan-live>.title>.more {
    margin-left: auto;
    font-size: 26rpx;
    color: #999;
    display: flex;
}

.suoyuan-live>.title>.img {
    width: 12rpx;
    height: 20rpx;
    margin-left: 8rpx;
}

.scroll {
    margin-bottom: 30rpx;
}

.scroll-view {
    white-space: nowrap;
    display: flex;
}

.scroll-view .item {
    display: inline-block;
    margin-left: 30rpx;
    position: relative;
}

.scroll-view .item:last-child {
    margin-right: 30rpx;
}

.scroll-view .item .img {
    width: 560rpx;
    height: 300rpx;
    border-radius: 12rpx;
}

.all-line {
    width: 100%;
    background: #f4f4f4;
    height: 20rpx;
}