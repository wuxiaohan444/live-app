@import "../../../../Wxss/0.wxss";

#notice .news {
    height: 77rpx;
    border-top: 1rpx solid #f4f4f4;
    padding: 0 30rpx;
    box-shadow: 0 10rpx 30rpx #f5f5f5;
}

#notice .day-news {
    display: flex;
    align-items: center;
}

#notice .news .pictrue {
    width: 40rpx;
    height: 36rpx;
    border-right: 1rpx solid #ddd;
    padding-right: 23rpx;
    box-sizing: content-box;
}

#notice .news .pictrue image {
    width: 100%;
    height: 100%;
}

#notice .news .swiperTxt {
    width: 100%;
    height: 100%;
    line-height: 77rpx;
    overflow: hidden;
    padding-left: 30rpx;
}

#notice .news .swiperTxt .text {
    width: 100%;
    flex: 1;
    justify-content: flex-start;
}

#notice .news .swiperTxt .text .label {
    font-size: 20rpx;
    color: #ff4c48;
    width: 64rpx;
    height: 30rpx;
    border-radius: 40rpx;
    text-align: center;
    line-height: 28rpx;
    border: 2rpx solid #ff4947;
    margin-right: 20rpx;
}

#notice .news .swiperTxt .text .newsTitle {
    font-size: 24rpx;
    color: #666;
}

#notice .news .swiperTxt .iconfont {
    font-size: 28rpx;
    color: #888;
}

#notice .news .swiperTxt swiper {
    height: 100%;
}