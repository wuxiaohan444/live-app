.swiper {
    position: relative;
}

.swiper>swiper {
    height: 300rpx;
}

.swiper-item>.img {
    padding: 0 15rpx;
}

.swiper-item>.img>image {
    width: 100%;
    height: 300rpx;
    border-radius: 12rpx;
}

.dots {
    display: flex;
    justify-content: center;
    margin-top: 20rpx;
    position: absolute;
    bottom: 20rpx;
    width: 100%;
    text-align: center;
}

.dot {
    margin: 0 8rpx;
    width: 60rpx;
    height: 12rpx;
    background: #fff;
    border-radius: 12rpx;
    background-color: #b1a6a3;
}

.dot.active {
    width: 50rpx;
    background: #333;
}