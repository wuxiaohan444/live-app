.space {
    width: 100%;
    height: 20rpx;
    background: #eee;
}

.kind_contain {
    position: sticky;
    top: 0;
    z-index: 9999;
}

.rp {
    position: relative;
    align-items: center;
    width: 100%;
    height: 90rpx;
    display: flex;
    border-bottom: solid 1rpx #f1f1f1;
}

.nav {
    width: calc(100% - 70rpx);
    height: 100%;
    white-space: nowrap;
    display: flex;
    box-sizing: border-box;
}

.nav-item {
    margin: 0 30rpx;
    height: 100%;
    display: inline-block;
}

.nav-text {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    letter-spacing: 4rpx;
    box-sizing: border-box;
    font-weight: 700;
    color: #333;
    font-size: 28rpx;
}

.tab-on {
    font-size: 36rpx!important;
    font-weight: 700;
    position: relative;
    color: #fe4564;
}

.tab-on::after {
    content: '';
    position: absolute;
    width: 50rpx;
    height: 6rpx;
    background-color: #fe4564;
    bottom: 0rpx;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 12rpx;
}

.kind_img {
    width: 70rpx;
    height: 85rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: -2rpx 0rpx 5rpx #f1f1f1;
}

.kind_img image {
    width: 32rpx;
    height: 32rpx;
}

.kindlist_box {
    position: absolute;
    width: 100%;
    top: 90rpx;
    left: 0rpx;
    border-bottom: 1rpx solid #eee;
    z-index: 9999;
}

.kindlist_card {
    padding: 20rpx 20rpx 0 20rpx;
    width: 100%;
    display: flex;
    box-sizing: border-box;
    background: #fff;
}

.list_grid {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
}

.list_one {
    width: 25%;
    padding: 0 10rpx 20rpx 10rpx;
    display: flex;
    box-sizing: border-box;
    color: #333;
    font-weight: 700;
}

.list_one view {
    width: 100%;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1rpx solid #eee;
    border-radius: 10rpx;
    font-size: 28rpx;
    letter-spacing: 2rpx;
}

.list-on {
    background: #ff5560;
    color: #fff;
    border: none!important;
}

.fixed {
    position: fixed;
    left: 0rpx;
    top: 0rpx;
}

.nofixed {
    height: 91rpx;
    width: 100%;
    background: #fff;
}