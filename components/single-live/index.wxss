.single {
    position: relative;
    color: #fff;
    font-size: 13px;
    overflow: hidden;
    width: 340rpx;
    height: 228px;
    border-radius: 6px;
}

.preview .top {
    width: 100%;
    height: 227px;
    position: relative;
    background-size: cover;
    background-repeat: no-repeat;
}

.preview .top .status {
    margin: 8px;
    position: absolute;
}

.preview .top .activityLogo image {
    width: 36.5%;
    position: absolute;
    right: 0;
}

.preview .top .detail {
    width: 100%;
    height: 74px;
    background: linear-gradient(transparent,rgba(0,0,0,.3));
    position: absolute;
    bottom: 0;
    display: flex;
    padding-top: 41px;
    box-sizing: border-box;
    justify-content: flex-end;
}

.preview .top .count {
    display: flex;
    align-items: center;
    line-height: 1px;
    margin-right: 10px;
    justify-content: flex-end;
}

.preview .top .count .heart {
    margin-right: 2px;
}

.preview .top .shopInfo {
    display: flex;
    align-items: center;
    position: absolute;
    bottom: 7px;
    left: 8px;
}

.preview .top .shopInfo .logo {
    width: 20px;
    height: 20px;
    border-radius: 50%;
}

.preview .top .shopInfo .name {
    margin-left: 5px;
    font-size: 13px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    display: inline-block;
    width: 80px;
}

.title {
    height: 84px;
    color: #000;
    font-size: 12px;
    background-color: #fff;
    border-radius: 0 0 6px 6px;
    padding: 7px 11px;
    box-sizing: border-box;
    position: relative;
}

.title .live-name {
    font-size: 14px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    display: inline-block;
    width: 100%;
    height: 28px;
    line-height: 23px;
}

.title .goods-det {
    height: 40px;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.title .goods-det .left {
    width: 100px;
    font-size: 12px;
}

.title .goods-det .left .goods-name {
    color: #7d7e80;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    width: 100%;
    height: 20px;
    box-sizing: border-box;
}

.title .goods-det .right {
    width: 42px;
    height: 42px;
    position: absolute;
    right: 5px;
    bottom: 5px;
    border-radius: 2px;
}

.activity-banner,.title .goods-det .right {
    background-size: cover;
    background-repeat: no-repeat;
}

.activity-banner {
    height: 310px;
}

.row-banner {
    width: 700rpx;
    height: 140px;
    border-radius: 5px;
    background-size: cover;
    background-repeat: no-repeat;
}

