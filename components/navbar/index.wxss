@import "../../app.wxss";

.navbar {
    position: fixed;
    background-color: #fff;
    top: 0;
    left: 0;
    z-index: 999;
    width: 100%;
}

.navbar.on {
    background-color: #ff4466;
}

.navbar.black {
    background-color: #232323;
}

.navbar.gray {
    background-color: #666;
}

.navbar.white {
    background-color: #fff;
}

.navbar.red {
    background-color: #ff4466;
}

.navbar .navbarH {
    position: relative;
}

.navbar .navbarH .navbarCon {
    position: absolute;
    bottom: 0;
    height: 100rpx;
    width: 100%;
}

.navbar .navbarH .navbarCon .name {
    color: #000;
    font-size: 32rpx;
    font-weight: bold;
    width: 300rpx;
    text-align: center;
}

.navbar .navbarH .navbarCon .name.on {
    color: #fff;
}

.navbar .navbarH .navbarCon .icon-xiangzuo {
    color: #000;
    font-weight: bold;
    position: absolute;
    font-size: 40rpx;
    left: 16rpx;
    width: 100rpx;
    height: 56rpx;
    line-height: 54rpx;
    top: 50%;
    transform: translateY(-50%);
}

.navbar .navbarH .navbarCon .icon-xiangzuo.on {
    color: #fff;
}

.navbar .navbar-search {
    position: absolute;
    bottom: 0;
    height: 100rpx;
    width: 100%;
}

.navbar .navbar-search .logo {
    width: 70rpx;
    height: 60rpx;
}

.navbar .navbar-search .logo image {
    width: 100%;
    height: 100%;
    display: block;
}

.navbar .navbar-search .search {
    width: 460rpx;
    height: 64rpx;
    background-color: #f7f7f7;
    border-radius: 50rpx;
    padding: 0 28rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #bbb;
    margin-right: 86rpx;
}

.navbar .navbar-search .search .icon-xiazai5 {
    font-size: 34rpx;
    margin-right: 16rpx;
}