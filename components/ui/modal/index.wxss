.modal-box {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 500;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: rgba(0,0,0,.5);
    justify-content: center;
}

.modal-box .modal-bg {
    background-color: #fff;
    max-width: 70%;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 204rpx;
    box-sizing: border-box;
}

.modal-box .modal-bg .modal-title {
    font-size: 32rpx;
    font-weight: 600;
    color: rgba(0,0,0,1);
    padding-top: 50rpx;
}

.modal-box .modal-bg .modal-txt {
    border-bottom: 1rpx #eee solid;
    font-size: 26rpx;
    color: #999;
    padding: 30rpx;
}

.modal-box .modal-bg .btn {
    display: flex;
    align-items: center;
    justify-content: space-around;
    font-size: 30rpx;
    width: 100%;
    white-space: nowrap;
}

.modal-box .modal-bg .btn .cancel-btn,.modal-box .modal-bg .btn .confirm-btn {
    height: 80rpx;
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-box .modal-bg .btn .confirm-btn {
    color: #25bb32;
}

.modal-box .modal-bg .btn .cancle-btn {
    color: #999;
    border-left: 1rpx #eee solid;
}

.address .modal-bg {
    width: 560rpx;
    height: auto;
    border-radius: 24rpx;
    max-width: 100%;
}

.address .modal-bg .modal-txt {
    font-size: 30rpx;
    color: #333;
    padding: 0;
    width: 100%;
    height: 190rpx;
    text-align: center;
    line-height: 190rpx;
    border-bottom: none;
}

.address .modal-bg .btn {
    font-size: 32rpx;
    border-top: 1rpx #eee solid;
}

.address .modal-bg .btn .confirm-btn {
    color: #999;
    height: 100rpx;
    border-right: 1rpx solid #e5e5e5;
}

.address .modal-bg .btn .cancel-btn {
    color: #ff0136;
    height: 100rpx;
}