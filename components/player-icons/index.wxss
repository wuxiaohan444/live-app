.icons {
    position: relative;
    right: 0;
    bottom: 0;
    bottom: 48rpx;
    height: 110rpx;
    padding: 0 24rpx;
    display: flex;
    align-items: flex-end;
}

.comment {
    flex: 1;
    color: #fff;
    font-size: 14px;
    line-height: 40px;
    margin-left: 30rpx;
    position: relative;
    text-align: left;
    background: transparent;
}

.comment:after {
    display: none;
}

.comment-border {
    position: absolute;
    left: 0;
    bottom: 2px;
    height: 1px;
    width: 70px;
    transform: scaleY(50%);
    background-color: hsla(0,0%,100%,.4);
}

.goods-bag {
    position: relative;
    width: 72rpx;
    height: 82rpx;
}

.icon {
    width: 80rpx;
    height: 80rpx;
    margin-left: 20rpx;
}

.icon-goods {
    position: relative;
    width: 72rpx;
    height: 82rpx;
}

.icon-recover {
    position: absolute;
    right: 24rpx;
}

.icon.icon--highlight {
    color: #111;
    background: hsla(0,0%,100%,.8);
}

.circle {
    margin-top: 10rpx;
    color: #fff;
    font-size: 12px;
    line-height: 80rpx;
    text-align: center;
    border-radius: 80rpx;
    background: rgba(0,0,0,.9);
}

.icon-more {
    position: absolute;
    right: 314rpx;
    bottom: 134rpx;
}

.icon-more__fullscreen {
    right: 390rpx;
}

.goods-count,.like-count,.playchannel-tip,.share-tip {
    color: #fff;
    position: absolute;
    text-align: center;
}

.like-count {
    width: 64rpx;
    height: 24rpx;
    right: 30rpx;
    bottom: 68rpx;
    font-size: 9px;
    border-radius: 100px;
    line-height: 24rpx;
    background-color: #f44;
}

.goods-count {
    left: 0;
    bottom: 8rpx;
    width: 100%;
    font-size: 12px;
    font-weight: 500;
}

.playchannel-tip {
    right: 258rpx;
    bottom: 68rpx;
    height: 22px;
    line-height: 22px;
    padding: 0 8px;
    border-radius: 13px;
    font-size: 12px;
    background: #ff4240;
}

.triangle {
    position: absolute;
    right: 348rpx;
    bottom: 62rpx;
    width: 16rpx;
    height: 8rpx;
}

.share-tip {
    right: 114rpx;
    bottom: 68rpx;
    padding: 4px 6px;
    background: #f44;
    border-radius: 100px;
    font-size: 10px;
}

.icons__fullscreen {
    padding: 0 100rpx;
}

.icons__fullscreen .goods-count {
    left: 0;
    bottom: 24rpx;
}

.icons__fullscreen .like-count {
    right: 106rpx;
}

.icons__fullscreen .share-tip {
    right: 190rpx;
}

.icons__fullscreen .red-dot {
    right: 302rpx;
    bottom: 56rpx;
}

.icons__fullscreen .playchannel-tip {
    right: 328rpx;
}

.icons__fullscreen .triangle {
    right: 420rpx;
}

.red-dot {
    position: absolute;
    bottom: 58rpx;
    right: 232rpx;
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: #ff4240;
}