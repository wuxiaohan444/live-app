.addAddress {
    /*margin-top: 65rpx;*/
    max-height: 800rpx;
    overflow-y: scroll;
}

.addAddress .list .item {
    padding: 0 30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
}

.addAddress .list .item .name {
    width: 195rpx;
    font-size: 30rpx;
    color: #333;
    min-height: 90rpx;
    display: flex;
    align-items: center;
}

.addAddress .list .item checkbox,.addAddress .list .item .checktext {
    line-height: 90rpx;
}

.addAddress .list .item textarea {
    margin: 25rpx;
}

.addAddress .list .item input {
    height: 90rpx;
    line-height: 90rpx;
    width: 100%;
}

.input-width {
    width: 40%;
}

.time-frame {
    display: flex;
    align-items: center;
}

.time-frame input {
    text-align: center;
}

.time-frame-line {
    padding: 0 20rpx;
}

.time-range {
}

.time-range input {
    text-align: center;
}

.time-range-line {
    text-align: center;
}

.addAddress .wechatAddress {
    width: 690rpx;
    height: 86rpx;
    border-radius: 16rpx;
    text-align: center;
    line-height: 86rpx;
    margin: 0 auto;
    font-size: 32rpx;
    background-color: #07c160;
    color: #fff;
}

.keepBnt {
    border-radius: 10rpx;
    margin: 20rpx;
    background-color: rgba(245,68,101,1);
    color: #fff;
    font-size: 30rpx;
    height: 70rpx;
    line-height: 70rpx;
}

.checktext {
    margin-right: 20rpx;
}

.img-box {
    width: 480rpx;
    margin: 20rpx 0 0;
}