page {
    background-color: #f2f2f2;
    font-size: 24rpx!important;
}

.list-wrapper {
    margin-top: 2rpx;
    width: 100%;
    height: auto;
    background-color: #fff;
    color: #666;
    font-size: 34rpx;
}

.add-btn {
    position: absolute;
    bottom: 30rpx;
    left: 30rpx;
    width: 690rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background-color: #000000;
    color: #F7CC9C;
    font-size: 34rpx;
    font-weight: bold;
    line-height: 88rpx;
    text-align: center;
}

.missing-icon {
    margin-top: 118rpx;
    margin-left: 216rpx;
    width: 298rpx;
    height: 290rpx;
}

.missing-icon image {
    width: 100%;
    height: 100%;
}

.missing-text {
    margin: 60rpx 20rpx 0 20rpx;
    color: #999999;
    font-size: 28rpx;
    text-align: center;
}

.authenticate-btn {
    margin: 100rpx auto 30rpx auto;
    width: 580rpx;
    height: 88rpx;
    border-radius: 44rpx;
    border: 2rpx solid #fe4564;
    color: #fe4564;
    font-size: 34rpx;
    font-weight: bold;
    text-align: center;
    line-height: 88rpx;
}