page {
    background: #f4f4f4;
}

.top-btn {
    display: flex;
    align-items: center;
    padding: 30rpx;
}

.top-btn>.add {
    margin-left: auto;
    background: #fe4564;
    color: #fff;
    border-radius: 6rpx;
    width: 120rpx;
    line-height: 60rpx;
    font-size: 24rpx;
    text-align: center;
}

.content {
    background: #fff;
}

.content>.list {
    display: flex;
    align-items: center;
    line-height: 80rpx;
    padding: 0 30rpx;
    border-bottom: solid 1rpx #f1f1f1;
}

.content>.list:last-child {
    border-bottom: none;
}

.content>.list>.name {
    flex: 1;
    font-size: 28rpx;
}

.content>.list>.sort {
    margin-left: auto;
    font-size: 24rpx;
    color: #666;
}

.content>.list>.item {
    margin-left: 30rpx;
    font-size: 24rpx;
    color: #666;
}

.category_title {
    text-align: center;
    width: 100%;
    font-weight: bold;
}

.category_input {
    margin-top: 20rpx;
    padding: 10rpx;
    border: 1px solid #CCCCCC;
    border-radius: 5rpx;
}

.submit_btn {
    text-align: center;
    display: flex;
    justify-content: center;
    margin-top: 40rpx;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
}