page {
    background: #f4f4f4;
}

.picker {
    font-size: 24rpx;
    color: #666;
    text-align: center;
    padding: 30rpx;
}

.content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx;
    flex-wrap: wrap;
}

.content>.list {
    background: #fff;
    flex: 0 0 48%;
    height: 270rpx;
    box-shadow: 1rpx 1rpx 10rpx rgb(184,184,184);
    border-radius: 6rpx;
    margin-bottom: 30rpx;
}

.content>.list>.title {
    padding: 30rpx;
    font-size: 28rpx;
    color: #666;
}

.content>.list>.money {
    padding: 0 30rpx 30rpx 30rpx;
    font-size: 36rpx;
    color: #333;
    text-align: center;
    font-weight: 700;
}

.content>.list>.money>text {
    font-size: 24rpx;
    vertical-align: bottom;
    margin-left: 20rpx;
    font-weight: normal;
}

.content>.list>.tip {
    padding: 0 30rpx;
    font-size: 24rpx;
    color: #666;
    text-align: center;
}